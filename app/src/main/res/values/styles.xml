<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/background</item>

    </style>

    <style name="Toolbar">
        <item name="theme">@style/Theme.MaterialComponents</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="InputEditText" parent="@style/Widget.AppCompat.EditText">
       <item name="android:textColorHint">@color/gray_very_light</item>
        <item name="android:fontFamily">@font/gotham_pro</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainText">
        <item name="android:fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SignText">
        <item name="android:fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/gray_very_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DateButton">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="SimpleButton">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

</resources>
